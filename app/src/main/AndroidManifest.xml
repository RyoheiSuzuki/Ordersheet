<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="japan.sharaku.ordersheet">

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="japan.sharaku.ordersheet.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="japan.sharaku.ordersheet.MessagesTab"
            android:label="@string/app_name"
            android:parentActivityName="japan.sharaku.ordersheet.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="japan.sharaku.ordersheet.MainActivity" />
        </activity>
        <activity
            android:name=".FoodOrdering"
            android:label="Ordersheet!"
            android:parentActivityName=".MainActivity" >
        </activity>

    </application>

</manifest>